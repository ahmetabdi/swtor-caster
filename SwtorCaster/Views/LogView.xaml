<controls:MetroWindow x:Class="SwtorCaster.Views.LogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls" 
        Icon="../Resources/swtorcaster.ico"
        Title="SWTOR Caster - Log" Height="500" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0" Name="ScrollViewer" 
                      HorizontalScrollBarVisibility="Auto" 
                      VerticalScrollBarVisibility="Auto" 
                      Margin="10">
            <TextBlock x:Name="LogText" />
        </ScrollViewer>
        <Button Grid.Row="1" x:Name="ClearLog" DockPanel.Dock="Bottom" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="5">
            Clear log
        </Button>
    </Grid>
</controls:MetroWindow>
